@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>
@if (Model.Count() == 0)
{
    <p>We don't have any customers yet.</p>
}
else
{
    <p><strong>Customer</strong></p>


    <ul>
        @foreach (var customer in Model)
        {
            <li><a href="@Url.Action("Details", "Customers", new { Id = customer.Id })">@customer.Name</a></li>
        }
    </ul>
}





