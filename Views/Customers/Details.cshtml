@model Vidly.Models.Customer
@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>
<ul>
    <li>
        Membership Type: @Model.MembershipType.Name
    </li>
    @if (Model.BirthDate.HasValue)
    {
        <li>
            BirthDate: @Model.BirthDate.Value.ToString("MM/dd/yyyy")
        </li>
    }
</ul>

